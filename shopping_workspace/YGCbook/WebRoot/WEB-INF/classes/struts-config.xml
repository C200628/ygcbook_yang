<?xml version="1.0" encoding="UTF-8"?>
   <!DOCTYPE struts-config PUBLIC 
   "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
   "http://struts.apache.org/dtds/struts-config_1_3.dtd">  
   <struts-config>
   		 <form-beans>
   			 <form-bean name="userForm" type="co.jp.netwisdom.form.UserForm"/>
   		 </form-beans>
	   	 <action-mappings>
	   	 	<!-- 注册 -->
	   	 	<action path="/userRegister"
	   	 			name="userForm"
	   	 			type="co.jp.netwisdom.action.UserRigsterAction"
	   	 			scope="request">
	   	 			<forward name="Success"  path="/userRegSuccess.jsp" />
      				<forward name="Error"  path="/UserRegFail.jsp" />
	   	 	</action>
	   	 	<!-- 查询 -->
	   	 	<action path="/userSearch"
	   	 			name="userForm"
	   	 			type="co.jp.netwisdom.action.UserSearchAction"
	   	 			scope="request">
	   	 			<forward name="userSearch"  path="/userSearch.jsp" />
	   	 	</action>
	   	 	<!-- 更新初始化 -->
	   	 	<action path="/userUpdateInit"
	   	 			name="userForm"
	   	 			type="co.jp.netwisdom.action.UserUpdateInitAction"
	   	 			scope="request">
	   	 			<forward name="userReg"  path="/userReg.jsp" />
	   	 	</action>  	
	   	 	<!-- 更新 -->
	   	 	<action path="/updateReg"
	   	 			name="userForm"
	   	 			type="co.jp.netwisdom.action.UserUpdateAction"
	   	 			scope="request">
	   	 			<forward name="Success"  path="/userRegSuccess.jsp" />
      				<forward name="Error"  path="/UserRegFail.jsp" />
	   	 	</action>
	 		<!-- 删除 -->
	   	 	<action path="/deldateReg"
	   	 			name="userForm"
	   	 			type="co.jp.netwisdom.action.UserDeleteAction"
	   	 			scope="request">
	   	 			<forward name="userSearch"  path="/userSearch.jsp" />
	   	 	</action>
	   	 	<!-- 删除所有 -->
	   	 	<action path="/delAllUser"
	   	 			name="userForm"
	   	 			type="co.jp.netwisdom.action.UserDeleteAllAction"
	   	 			scope="request">
	   	 			<forward name="userSearch"  path="/userSearch.jsp" />
	   	 	</action>
	   	 	<!-- checkName -->
	   	 	<action path="/checkName"
	   	 			name="userForm"
	   	 			type="co.jp.netwisdom.action.CheckUserNameAction"
	   	 			scope="request">
	   	 	</action>
	   	 	<!-- checkName -->
	   	 	<action path="/userNameSearch"
	   	 			name="userForm"
	   	 			type="co.jp.netwisdom.action.UserNameSearchAction"
	   	 			scope="request">
	   	 	</action>
	     </action-mappings>
	     
	     <message-resources key ="userResources" parameter="applicationResources"/>

   </struts-config >

   
   

